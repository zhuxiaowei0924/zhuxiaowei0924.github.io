// 修改文章块透明度
.post-block {
	padding: $content-desktop-padding;
	background: rgba(255,255,255,1);   //white;
	box-shadow: $box-shadow-inner;
	border-radius: $border-radius-inner;
}

// Comments blocks.
.comments {
	padding: $content-desktop-padding;
	margin: initial;
	margin-top: sboffset;
	background: rgba(255,255,255,1);   //white;
	box-shadow: $box-shadow;
	border-radius: $border-radius;
}

// 修改菜单栏透明度
.header-inner {
    opacity: 1;
}

// 设置主页面宽度
.header{
    width: 90%;
    +tablet() {
        width: 100%;
    }
    +mobile() {
        width: 100%;
    }
}
.container .main-inner {
    width: 90%;
    +tablet() {
        width: 100%;
    }
    +mobile() {
        width: 100%;
    }
}
.content-wrap {
    width: calc(100% - 260px);
    +tablet() {
        width: 100%;
    }
    +mobile() {
        width: 100%;
    }
}